---
interface Props {
  title: string;
  skills: number;
  technologies: number;
  url: string;
  className?: string;
}

const { skills, title, className, technologies, url } = Astro.props;
---

<div
  class=`bg-card rounded p-4 flex flex-col gap-6 justify-between ${className}`
>
  <header>
    <h2 class="font-bold text-xl">{title}</h2>
  </header>

  <div class="flex flex-col gap-4 text-sm">
    <div>
      {
        !!skills && (
          <p>
            <span>{skills}</span> skills
          </p>
        )
      }
      {
        !!technologies && (
          <p>
            <span>{technologies}</span> technologies
          </p>
        )
      }
    </div>

    <p>
      <a class="underline text-primary text-xs" href={url}>Learn more</a>
    </p>
  </div>
</div>

<style></style>
