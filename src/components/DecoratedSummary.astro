---
import DecoratedList from "./DecoratedList.astro";

export type Item = {
  count: number;
  forms: [string, string];
};

type Props = {
  items: Item[];
};

const { items } = Astro.props;

const formattedItems = items
  .filter((item) => item.count > 0)
  .map((item) => {
    const { count, forms } = item;
    const [singular, plural] = forms;
    const form = count === 1 ? singular : plural;
    return { title: `${count} ${form}` };
  });
---

<DecoratedList items={formattedItems} className="text-xs" />
