---
import type { TotalYears } from "../../utils/dates";

interface Props {
  title: string;
  experience: TotalYears;
  projects: number;
  courses: number;
  url: string;
  className?: string;
}

const { experience, projects, title, className, courses, url } = Astro.props;
---

<div
  class=`bg-card rounded p-4 flex flex-col gap-6 justify-between ${className}`
>
  <header>
    <h2 class="font-bold text-xl">{title}</h2>
  </header>

  <div class="flex flex-col gap-4 text-sm">
    <div>
      <p>
        <span>{experience.years}</span> years
      </p>
      {
        !!projects && (
          <p>
            <span>{projects}</span> projects
          </p>
        )
      }
      {
        !!courses && (
          <p>
            <span>{courses}</span> courses
          </p>
        )
      }
    </div>

    <p>
      <a class="underline text-primary text-xs" href={url}>Learn more</a>
    </p>
  </div>
</div>

<style></style>
