---
import Card from "./Card.astro";
import CraftLayout from "../../layouts/CraftLayout.astro";

import reactImage from "../../assets/react.svg";
import tsImage from "../../assets/typescript.svg";
import nodeImage from "../../assets/nodejs.svg";
import mongoImage from "../../assets/mongodb.svg";
import jestImage from "../../assets/jest.svg";
import awsImage from "../../assets/aws.svg";
import { paths } from "../../paths";
import { TechId } from "../../models";
---

<CraftLayout title="Technologies">
  <main>
    <ul class="flex flex-row gap-12 flex-wrap list-none m-0">
      <li class="flex basis-0 grow">
        <Card
          title="React"
          image={reactImage}
          experience={7}
          projects={6}
          className="grow"
          url={paths.tech(TechId.React)}
        />
      </li>

      <li class="flex basis-0 grow">
        <Card
          title="Typescript"
          image={tsImage}
          experience={7}
          projects={7}
          className="grow"
          url={paths.tech(TechId.Typescript)}
        />
      </li>

      <li class="flex basis-0 grow">
        <Card
          title="Node.js"
          image={nodeImage}
          experience={4}
          projects={5}
          className="grow"
          url=""
        />
      </li>

      <li class="flex basis-0 grow">
        <Card
          title="Testing"
          image={jestImage}
          experience={7}
          projects={6}
          className="grow"
          url={paths.tech(TechId.TestingLibrary)}
        />
      </li>

      <li class="flex basis-0 grow">
        <Card
          title="MongoDB"
          image={mongoImage}
          experience={4}
          projects={3}
          className="grow"
          imageClass="max-w-[35px]"
          url={paths.tech(TechId.MongoDB)}
        />
      </li>

      <li class="flex basis-0 grow">
        <Card
          title="Cloud"
          image={awsImage}
          experience={4}
          projects={5}
          className="grow"
          url={paths.tech(TechId.Aws)}
        />
      </li>
    </ul>
  </main>
</CraftLayout>

